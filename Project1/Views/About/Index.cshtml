<script src="~/Scripts/jquery-1.10.2.js"></script>

<script src="~/Scripts/bootstrap.js"></script>
@{
    ViewBag.Title = "About";
}

<h2>About Us</h2>
<div class="container-fluid">
    
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="8000">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/Images/tanner_building.png" alt="Chania">
                        <div class="carousel-caption">
                            <p style="font-size:12pt">As part of the Marriott School of Business, we're located in the Tanner Building</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/Images/decisions.png" alt="Chania">
                        <div class="carousel-caption">
                            <p style="color:black;font-size:12pt">We know that deciding on a major is a huge, difficult choice</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/Images/advice.png" alt="Flower">
                        <div class="carousel-caption">
                            <p style="color:black;font-size:12pt">We put you in contact with other students in the IS program who can give you advice</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/Images/handshake.png" alt="Flower">
                        <div class="carousel-caption">
                            <p style="font-size:12pt">So that ultimately you can make the right decision for you and get the job of your dreams!</p>
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

